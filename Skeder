-- Simple UI Library Example

local UILibrary = {}
UILibrary.__index = UILibrary

-- Function to create a new window (ScreenGui)
function UILibrary:NewWindow(title)
    -- Create the ScreenGui container
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    -- Create the window frame
    local window = Instance.new("Frame")
    window.Size = UDim2.new(0, 400, 0, 300)  -- Set window size
    window.Position = UDim2.new(0.5, -200, 0.5, -150)  -- Center the window
    window.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    window.Parent = screenGui

    -- Create the title label
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Size = UDim2.new(1, 0, 0, 30)
    titleLabel.Text = title
    titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleLabel.TextSize = 18
    titleLabel.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    titleLabel.Parent = window

    return window
end

-- Function to create a new section inside the window
function UILibrary:NewSection(window, sectionName)
    -- Create the section frame
    local section = Instance.new("Frame")
    section.Size = UDim2.new(1, 0, 0, 150)  -- Set section size
    section.Position = UDim2.new(0, 0, 0, 30)  -- Position below the title
    section.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    section.Parent = window

    -- Create UIGridLayout for the section to manage element positioning
    local gridLayout = Instance.new("UIGridLayout")
    gridLayout.CellSize = UDim2.new(0, 120, 0, 40)  -- Element size
    gridLayout.CellPadding = UDim2.new(0, 10, 0, 10)  -- Padding between elements
    gridLayout.SortOrder = Enum.SortOrder.LayoutOrder
    gridLayout.Parent = section

    -- Section label
    local sectionLabel = Instance.new("TextLabel")
    sectionLabel.Size = UDim2.new(1, 0, 0, 20)
    sectionLabel.Text = sectionName
    sectionLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    sectionLabel.TextSize = 14
    sectionLabel.Parent = section

    return section
end

-- Function to create a button inside the section
function UILibrary:CreateButton(section, buttonText, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 120, 0, 40)  -- Button size
    button.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    button.Text = buttonText
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextSize = 16
    button.Parent = section

    -- Button click event
    button.MouseButton1Click:Connect(callback)
end

-- Function to create a textbox inside the section
function UILibrary:CreateTextbox(section, placeholderText, callback)
    local textbox = Instance.new("TextBox")
    textbox.Size = UDim2.new(0, 120, 0, 40)
    textbox.BackgroundColor3 = Color3.fromRGB(90, 90, 90)
    textbox.PlaceholderText = placeholderText
    textbox.TextColor3 = Color3.fromRGB(255, 255, 255)
    textbox.TextSize = 16
    textbox.Parent = section

    -- Textbox submit event
    textbox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            callback(textbox.Text)
        end
    end)
end

-- Return the library to be used
return UILibrary
